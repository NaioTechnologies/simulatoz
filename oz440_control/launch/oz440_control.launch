<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find oz440_control)/config/oz440_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/oz440" args="joint_state_controller front_right_wheel_velocity_controller back_left_wheel_velocity_controller back_right_wheel_velocity_controller front_left_wheel_velocity_controller" />

  <!-- convert joint states to TF transforms for rviz, etc -->


    <!-- spawn controller -->
  <!--<node name="joint_state_controller_spawner" pkg="controller_manager" type="spawner" output="screen" ns="/oz440" args="joint_state_controller" />-->

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <remap from="/joint_states" to="/oz440/joint_states" />
  </node>

</launch>
